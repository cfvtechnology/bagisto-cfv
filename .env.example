# ============================================================================
# Docker Compose Environment Variables
# ============================================================================
# This file contains environment variables for docker-compose.yml
#
# IMPORTANT:
# 1. Copy this file to .env: cp .env.example .env
# 2. Update the values according to your environment
# 3. NEVER commit the .env file to the repository
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------

# Your application URL
# Development: http://localhost
# Production: https://your-domain.com
APP_URL=http://localhost

# Application environment (local, staging, production)
APP_ENV=local

# Debug mode (true for development, false for production)
APP_DEBUG=true

# ----------------------------------------------------------------------------
# Docker Build Arguments
# ----------------------------------------------------------------------------

# User ID for the container (should match your host user ID)
# Linux users: Run 'id -u' to get your UID
APP_UID=1000

# Username for the container
APP_USER=bagisto

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------

# Database host (use 'mysql' for docker-compose internal network)
# CRITICAL: Must be "mysql" (the service name), NOT "localhost"!
DB_HOST=mysql

# Database port
DB_PORT=3306

# Database name
DB_DATABASE=bagisto

# Database username
# If you use "root", no custom user is created
# If you use a custom name (e.g., "cfvtienda"), MySQL will create it automatically
DB_USERNAME=root

# Database password
# IMPORTANT: Change this to a strong password in production!
# This password is used for both root and custom user (if DB_USERNAME is not "root")
DB_PASSWORD=root

# ----------------------------------------------------------------------------
# Bagisto Automated Setup Configuration
# ----------------------------------------------------------------------------

# Enable automatic setup on first container start
# Set to 'true' to automatically install Bagisto on first run
# Set to 'false' to install manually
AUTO_SETUP=true

# Bagisto version to install
BAGISTO_VERSION=v2.3.6

# Load sample product data
# Set to 'true' for demo/development environments
# Set to 'false' for production
SEED_SAMPLE_DATA=false

# Create testing database
# Set to 'true' if you need a separate testing database
CREATE_TEST_DB=false

# Force reinstallation (WARNING: This will delete existing data!)
# Uncomment only when you need to force a fresh installation
# FORCE_SETUP=true

# Skip setup completely (use if you want to install manually)
# SKIP_SETUP=false

# ============================================================================
# PRODUCTION NOTES
# ============================================================================
#
# For production deployment (e.g., Dokploy):
#
# 1. Change APP_ENV to 'production'
# 2. Set APP_DEBUG to 'false'
# 3. Update APP_URL to your actual domain
# 4. Generate a strong DB_PASSWORD (use: openssl rand -base64 32)
# 5. Consider disabling SEED_SAMPLE_DATA
# 6. Keep AUTO_SETUP as 'true' for automatic deployment
#
# ============================================================================

# ============================================================================
# DEVELOPMENT NOTES
# ============================================================================
#
# For local development:
#
# 1. The default values above are already configured for local development
# 2. Just run: cp .env.example .env
# 3. Then run: docker-compose up -d
# 4. Bagisto will be installed automatically
#
# ============================================================================
